<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 450px; width: 100%;">
        <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-person-plus-fill"></i> Register</h3>
        </div>
        <div class="card-body p-4">
            <form method="post" action="/Account/Register" class="row g-3">

                <!-- Username -->
                <div class="col-12">
                    <label class="form-label fw-semibold"><i class="bi bi-person"></i> Username</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-person-fill"></i></span>
                        <input type="text" name="UserName" class="form-control shadow-sm" placeholder="Enter username" required />
                    </div>
                </div>

                <!-- Email -->
                <div class="col-12">
                    <label class="form-label fw-semibold"><i class="bi bi-envelope"></i> Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" name="UserEmail" class="form-control shadow-sm" placeholder="Enter email" required />
                    </div>
                </div>

                <!-- Password -->
                <div class="col-12">
                    <label class="form-label fw-semibold"><i class="bi bi-lock"></i> Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-key-fill"></i></span>
                        <input type="password" name="Password" class="form-control shadow-sm" placeholder="Enter password" required />
                    </div>
                </div>

                <!-- Register Button -->
                <div class="col-12 mt-2">
                    <button type="submit" class="btn btn-success w-100 shadow-sm">
                        <i class="bi bi-check-circle"></i> Register
                    </button>
                </div>

                <!-- Login Link -->
                <div class="col-12 text-center mt-2">
                    <span>Already a member? </span><a href="/Account/Login" class="fw-semibold">Sign in</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(90deg, #4facfe, #00f2fe) !important;
    }
</style>
