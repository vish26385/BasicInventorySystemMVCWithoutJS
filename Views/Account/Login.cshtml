<form method="post" action="/Account/Login">
    <table>
        <tr><td><label>Username</label></td></tr>
        <tr><td><input type="text" style="width:100%;" required name="UserName" placeholder="Enter Username" /></td></tr>
        <tr><td><label>Password</label></td></tr>
        <tr><td><input type="password" style="width:100%;" required name="Password" placeholder="Enter Password" /></td></tr>
        <tr><td style="text-align:right"><a href="/Account/ForgotPassword">Forgot Password?</a></td></tr>
        <tr><td><button type="submit" style="width:100%;">Login</button></td></tr>
        <tr><td><label>Not a member?</label><a href="/Account/Register">Sign up now</a></td></tr>
    </table>
    <p>@ViewBag.Message</p>
</form>