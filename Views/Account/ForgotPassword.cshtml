<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 450px; width: 100%;">
        <div class="card-header bg-gradient bg-warning text-white text-center rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-key"></i> Forgot Password</h3>
        </div>
        <div class="card-body p-4">
            <form method="post" action="/Account/ForgotPassword" class="row g-3">

                <!-- Email -->
                <div class="col-12">
                    <label class="form-label fw-semibold"><i class="bi bi-envelope"></i> Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" name="userEmail" class="form-control shadow-sm" placeholder="Enter your email" required />
                    </div>
                </div>

                <!-- Reset Link Button -->
                <div class="col-12 mt-2">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm">
                        <i class="bi bi-send"></i> Send Reset Link
                    </button>
                </div>

                <!-- Back to Login -->
                <div class="col-12 text-center mt-2">
                    <a href="/Account/Login" class="fw-semibold"><i class="bi bi-arrow-left"></i> Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(90deg, #ff9966, #ff5e62) !important;
    }
</style>
