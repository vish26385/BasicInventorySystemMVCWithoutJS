@model ALLINONEPROJECTWITHOUTJS.Controllers.ItemMasterViewModel

@if (Model?.itemMasters != null && Model.itemMasters.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle text-center shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col"><i class="bi bi-box"></i> Item Name</th>
                    <th scope="col"><i class="bi bi-currency-rupee"></i> Price</th>
                    <th scope="col"><i class="bi bi-archive"></i> Stock</th>
                    <th scope="col" colspan="3"><i class="bi bi-gear"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.itemMasters.Count; i++)
                {
                    <tr>
                        <td>@Model.itemMasters[i].Name</td>
                        <td>@Model.itemMasters[i].Price.ToString("0.00")</td>
                        <td>@Model.itemMasters[i].CurrentStock</td>
                        <td>
                            <form method="post" action="/Item/EditItem" class="d-inline">
                                <input type="hidden" name="ItemMaster.Id" value="@Model.itemMasters[i].Id" />
                                <button type="submit" class="btn btn-warning btn-sm shadow-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
                            </form>
                        </td>
                        <td>
                            <form method="post" action="/Item/DeleteItem" class="d-inline">
                                <input type="hidden" name="Id" value="@Model.itemMasters[i].Id" />
                                <button type="submit" class="btn btn-danger btn-sm shadow-sm"
                                        onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                        <td>
                            <form method="post" action="/Item/AddToCart" class="d-inline">
                                <input type="hidden" name="Id" value="@Model.itemMasters[i].Id" />
                                <button type="submit" class="btn btn-success btn-sm shadow-sm">
                                    <i class="bi bi-cart-plus"></i> Add To Cart
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info shadow-sm">
        <i class="bi bi-info-circle"></i> No items available. Please add some items first.
    </div>
}
