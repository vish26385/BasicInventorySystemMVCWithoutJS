@model ALLINONEPROJECTWITHOUTJS.Controllers.ItemMasterViewModel

<div class="container my-4">
    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-box-seam"></i> Item Master
        </h2>
        <span class="badge bg-gradient bg-primary text-white shadow-sm p-2">
            Manage your inventory
        </span>
    </div>

    <!-- Item Form Card -->
    <div class="card shadow-lg border-0 rounded-3 mb-4">
        <div class="card-header bg-gradient bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Add / Update Item</h5>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                @Html.Partial("_ItemFormPartial")
                @* <div class="col-12 text-end">
                    <button type="submit" class="btn btn-success shadow-sm px-4">
                        <i class="bi bi-check-circle"></i> Save Item
                    </button>
                </div> *@
            </form>
        </div>
    </div>

    <!-- Message -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info shadow-sm">
            <i class="bi bi-info-circle"></i> @ViewBag.Message
        </div>
    }

    <!-- Item List Card -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-gradient bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-list-ul"></i> Item List</h5>
        </div>
        <div class="card-body p-0">
            @Html.Partial("_ItemListPartial")
        </div>
    </div>
</div>
