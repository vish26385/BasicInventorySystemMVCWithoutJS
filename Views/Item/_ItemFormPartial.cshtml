@model ALLINONEPROJECTWITHOUTJS.Controllers.ItemMasterViewModel

<div class="row g-3">
    <input type="hidden" name="ItemMaster.Id" value="@Model.ItemMaster?.Id" />

    <!-- Item Name -->
    <div class="col-md-6">
        <label class="form-label fw-semibold"><i class="bi bi-box"></i> Item Name</label>
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-pencil"></i></span>
            <input type="text" class="form-control shadow-sm"
                   placeholder="Enter item name"
                   name="ItemMaster.Name"
                   value="@Model.ItemMaster?.Name" required />
        </div>
    </div>

    <!-- Item Price -->
    <div class="col-md-6">
        <label class="form-label fw-semibold"><i class="bi bi-currency-rupee"></i> Item Price</label>
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-cash-stack"></i></span>
            <input type="number" step="0.01" class="form-control shadow-sm"
                   placeholder="Enter price"
                   name="ItemMaster.Price"
                   value="@Model.ItemMaster?.Price" />
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="col-12 text-end mt-3">
        @if (Model.ItemMaster != null && Model.ItemMaster.Id > 0)
        {
            <button type="submit" formaction="/Item/UpdateItem" class="btn btn-warning shadow-sm px-4">
                <i class="bi bi-arrow-repeat"></i> Update
            </button>
        }
        else
        {
            <button type="submit" formaction="/Item/SaveItem" class="btn btn-primary shadow-sm px-4">
                <i class="bi bi-save"></i> Save
            </button>
        }
    </div>
</div>