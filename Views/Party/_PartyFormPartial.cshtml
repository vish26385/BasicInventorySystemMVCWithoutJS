@model ALLINONEPROJECTWITHOUTJS.Controllers.PartyMasterViewModel

<div class="row g-3">
    <input type="hidden" name="PartyMaster.Id" value="@Model.PartyMaster?.Id" />

    <!-- Party Name -->
    <div class="col-md-6">
        <label class="form-label fw-semibold"><i class="bi bi-building"></i> Party Name</label>
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-pencil"></i></span>
            <input type="text" class="form-control shadow-sm" 
                   placeholder="Enter party name" 
                   name="PartyMaster.Name" 
                   value="@Model.PartyMaster?.Name" required />
        </div>
    </div>

    <!-- Party Type -->
    <div class="col-md-6">
        <label class="form-label fw-semibold"><i class="bi bi-diagram-2"></i> Party Type</label>
        <select name="PartyMaster.Type" class="form-select shadow-sm" required>
            <option value="">-- Select Type --</option>
            @if (Model.PartyMaster?.Type == "Customer")
            {
                <option value="Customer" selected>Customer</option>
            }
            else
            {
                <option value="Customer">Customer</option>
            }
            @if (Model.PartyMaster?.Type == "Supplier")
            {
                <option value="Supplier" selected>Supplier</option>
            }
            else
            {
                <option value="Supplier">Supplier</option>
            }

        </select>
    </div>

    <!-- Buttons -->
    <div class="col-12 text-end mt-3">
        @if (Model.PartyMaster != null && Model.PartyMaster.Id > 0)
        {
            <button type="submit" formaction="/Party/UpdateParty" class="btn btn-warning shadow-sm px-4">
                <i class="bi bi-arrow-repeat"></i> Update
            </button>
        }
        else
        {
            <button type="submit" formaction="/Party/SaveParty" class="btn btn-success shadow-sm px-4">
                <i class="bi bi-save"></i> Save
            </button>
        }
    </div>
</div>
