@model ALLINONEPROJECTWITHOUTJS.DTOs.SaleViewModel

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light text-center">
            <tr>
                <th>Item Name</th>
                <th>Qty</th>
                <th>Rate</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.salesMaster.salesDetails != null)
            {
                @for (int i = 0; i < Model.salesMaster.salesDetails.Count; i++)
                {
                    <tr>
                        <!-- Item -->
                        <td>
                            <select class="form-select" name="salesMaster.salesDetails[@i].ItemId" onchange="this.form.submit()">
                                <option value="0">-- Select Item --</option>
                                @foreach (var item in Model.itemMasters)
                                {
                                    @* <option value="@item.Id" @(Model.salesMaster.salesDetails[i].ItemId == item.Id ? "selected" : "")>@item.Name</option> *@
                                    @if (Model.salesMaster.salesDetails[i].ItemId == item.Id)
                                    {
                                        <option value="@item.Id" selected>@item.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </td>

                        <!-- Qty -->
                        <td>
                            <input type="number" class="form-control text-center" name="salesMaster.salesDetails[@i].Qty"
                                   value="@Model.salesMaster.salesDetails[i].Qty" oninput="this.form.submit()" />
                        </td>

                        <!-- Rate -->
                        <td>
                            <input type="number" class="form-control text-center" readonly
                                   name="salesMaster.salesDetails[@i].Rate" value="@Model.salesMaster.salesDetails[i].Rate" />
                        </td>

                        <!-- Amount -->
                        <td>
                            <input type="number" class="form-control text-center fw-bold text-success" readonly
                                   name="salesMaster.salesDetails[@i].Amount" value="@Model.salesMaster.salesDetails[i].Amount" />
                        </td>

                        <!-- Actions -->
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <button type="submit" formaction="/Sale/AddNewRow" class="btn btn-sm btn-success">
                                    <i class="bi bi-plus-circle me-1"></i> Add
                                </button>
                                <button type="submit" formaction="/Sale/DeleteRow" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
